{% extends "Shared/_layout.twig" %}

{% block title %} Contacts {% endblock %}

{% block body %}

    <div class="container" id="contacts" v-cloak>

        <div class="row mb-2">
            <div class="col-12">
                <h2 class="text-dark mb-4">Contacts<i class="far fa-plus-square btn-sm text-success ml-1 align-middle"
                                                      data-toggle="tooltip" data-placement="top" title="Add contact"></i>
                </h2>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle fa-2x mr-2 align-middle"></i>
                    This page contains contact information of people and organization for quick access..
                </div>
            </div>

            <div class="col-12" v-if="alert.success">
                <div id="success-alert" class="alert alert-success" role="alert" >
                    <i class="far fa-check-circle fa-2x mr-2 align-middle"></i>
                    {{ '{{ alert.message }}' }}
                </div>
            </div>

            <div class="col-12" v-if="alert.error">
                <div id="error-alert" class="alert alert-danger" role="alert">
                    <i class="fas fa-times-circle fa-2x mr-2 align-middle"></i>
                    {{ '{{ alert.message }}' }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 mt-3" v-for="(item, index) in contacts">
                <div class="card h-100 w-100 text-white bg-secondary mb-3">
                    <div class="card-body">
                        <b class="card-title text-small" style="font-size: 13px;">{{ "{{ item.name }}" }}</b>
                        <a href="#">
                            <i class="far fa-trash-alt text-small text-danger float-right" data-toggle="tooltip" data-placement="top" title="Remove contact"
                               v-on:click="deleteContact(item.id, index)"></i>
                        </a>
                        <a v-bind:href="'/contacts/edit/' + item.id">
                            <i class="far fa-edit text-small text-warning float-right mr-1" data-toggle="tooltip" data-placement="top" title="Edit contact"></i>
                        </a>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-white bg-secondary"></li>
                            <li class="list-group-item text-white bg-secondary">{{ "{{ item.address }}, {{ item.city }} , {{ item.province }}, {{ item.country }}, {{ item.postal }}" }}</li>
                            <li class="list-group-item text-white bg-secondary">{{ "{{ item.phone }}" }}</li>
                            <li class="list-group-item text-white bg-secondary d-flex justify-content-end"><a href="#" class="btn btn-primary">
                                    <i class="fas fa-info-circle mr-2"></i>More...</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <!-- Remove contact Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Remove Contact</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block custom_scripts %}

    <script src="https://cdn.jsdelivr.net/npm/vue"></script>

    <script src="/assets/js/vue/contacts/index.js"></script>

    <script type="application/javascript">
        $(function () {
            // tooltips
            $('[data-toggle="tooltip"]').tooltip();

            //remove contact modal
            $('#myModal').on('shown.bs.modal', function () {
                $('#myInput').trigger('focus')
            });
        })
    </script>
{% endblock %}