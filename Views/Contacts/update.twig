{% extends "Shared/_layout.twig" %}

{% block title %} Update Contact {% endblock %}

{%  block header_scripts %}
    <link href="/assets/summernote-0.8.15/summernote-bs4.min.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="container" id="contact" v-cloak>

        <div class="row mb-2">
            <div class="col-md-10">
                <h2 class="text-dark mb-4">Update Contact</h2>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle fa-2x mr-2 align-middle"></i>
                    Here you can update the contact information.
                </div>
            </div>

            <div class="col-10" v-if="alert.success">
                <div id="success-alert" class="alert alert-success" role="alert" >
                    <i class="far fa-check-circle fa-2x mr-2 align-middle"></i>
                    {{ '{{ alert.message }}' }}
                </div>
            </div>

            <div class="col-10" v-if="alert.error">
                <div id="error-alert" class="alert alert-danger" role="alert">
                    <i class="fas fa-times-circle fa-2x mr-2 align-middle"></i>
                    {{ '{{ alert.message }}' }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <form>
                    <input type="hidden" name="csrf" id="csrf" value="{{ csrf }}">
                    <input type="hidden" id="inputid" name="id" value="{{ contact.id }}">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputname">Name</label>
                            <input type="text" class="form-control" id="inputname" name="contact_name" placeholder="name" value="{{ contact.name }}">
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputphone">Phone</label>
                            <input type="text" name="phone" class="form-control" id="inputphone" placeholder="phone" value="{{ contact.phone }}">
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputpemail">Email</label>
                            <input type="email" name="email" class="form-control" id="inputpemail" placeholder="email" value="{{ contact.email }}">
                        </div>
                    </div>
                    <div class="form-group form-row">
                        <div class="form-group col-md-4">
                            <label for="inputaddress">Address</label>
                            <input type="text" name="address" class="form-control" id="inputaddress" placeholder="1234 Main St" value="{{ contact.address }}">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputcity">City</label>
                            <input type="text" name="city" class="form-control" id="inputcity" value="{{ contact.city }}">
                        </div>
                        <div class="form-group col-md-1">
                            <label for="inputprovince">Province</label>
                            <input type="text" name="province" class="form-control" id="inputprovince" value="{{ contact.province }}">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputcountry">Country</label>
                            <input type="text" name="country" class="form-control" id="inputcountry" value="{{ contact.country }}">
                        </div>
                        <div class="form-group col-md-1">
                            <label for="inputpostal">Postal</label>
                            <input type="text" name="postal" class="form-control" id="inputpostal" value="{{ contact.postal }}">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <label for="notes">Notes</label>
                            <textarea name="note" id="summernote" class="form-control">{{ contact.note }}</textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <a href="#"  class="btn btn-success float-right" v-on:click="contactUpdate()">
                                <i class="fas fa-check text-small"></i>
                                Update
                            </a>

                            <a href="/contacts"  class="btn btn-warning float-right mr-2">
                                <i class="fas fa-times-circle text-small"></i>
                                Cancel/Back
                            </a>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
{% endblock %}

{% block custom_scripts %}
    <script type="application/javascript" src="/assets/summernote-0.8.15/summernote-bs4.js"></script>   

    <!-- vue js -->
    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script type="application/javascript" src="/assets/js/vue/contacts/update.js"></script>


    <script type="application/javascript">

        $(function () {

            $('#summernote').summernote({
                tabsize: 2,
                height: 120,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });

            //set editor value
            $('#summernote').summernote('code', '{{ contact.note }}');

        });

