{% extends "Shared/_layout.twig" %}

{% block title %} Sheep {% endblock %}


{% block body %}

    <!-- Breadcrumb-->
    <div class="breadcrumb-holder">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">LiveStock</a></li>
                <li class="breadcrumb-item active">Inventory </li>
            </ul>
        </div>
    </div>


    <section id="livestock_flock" v-cloak>
        <div class="container-fluid">
            <!-- Page Header-->
            <header>
                <h1 class="h3 display">
                    Livestock Management
                    <div class="col-lg-1 custom-control-inline">
                        <select class="form-control form-control-sm">
                            <option
                                    v-bind:selected="livestock_type_item.is_checked"
                                    v-for="livestock_type_item in livestock_types"
                                    v-on:change="updateLiveStockInventory(livestock_type_item.id)">
                                {{ '{{ livestock_type_item.type_name }}' }}
                            </option>
                        </select>
                    </div>

                </h1>
            </header>

            {#<br />#}

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Inventory</h4>
                        </div>
                        <div class="card-body">
                            <div class="table table-striped table-sm">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        {#<th>#</th>#}
                                        <th>Electronic Tag</th>
                                        <th>Tag</th>
                                        <th>sex</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <tr v-for="livestock_item in livestock">
                                            {#<th scope="row">{{ '{{ livestock_item.livestock_id }}' }}</th>#}
                                            <td> {{ '{{ livestock_item.long_tag }}' }}</td>
                                            <td> {{ '{{ livestock_item.tag }}' }}</td>
                                            <td>{{ '{{ livestock_item.livestock_sex }}' }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    {#page pagination#}
                    <nav aria-label="Pagination" v-if="pagination.total_pages > 1">
                        <ul class="pagination pagination-sm justify-content-sm-end">

                            {#previous page#}
                            <li class="page-item disabled" v-if="pagination.current_page == 1">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    &laquo;
                                </a>
                            </li>
                            <li class="page-item" v-else>
                                <a class="page-link" v-bind:href="pagination.current_page - 1" tabindex="-1" v-on:click="goToPage(pagination.current_page - 1)">
                                    &laquo;
                                </a>
                            </li>

                            {# current highlighted page link #}
                            <li class="page-item" v-bind:class="{'active' : (pagination.current_page == item)}" aria-current="page" v-for="item in pagination.pages_array">
                                <a class="page-link" href="#" v-on:click="goToPage(item)">
                                    {{ '{{ item }}' }}
                                    <span class="sr-only" v-if="pagination.current_page == item">(current)</span>
                                </a>
                            </li>

                            {# display next page link #}
                            <li class="page-item" v-if="pagination.pages_array.length > pagination.current_page">
                                <a class="page-link" href="#" v-on:click="goToPage(pagination.current_page + 1)">&raquo;</a>
                            </li>
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </section>

{% endblock %}

{#custom page javascript #}
{% block page_js %}
    <script src="/assets.bak/js/vue/livestock/livestock_vuejs.js"></script>
{% endblock %}