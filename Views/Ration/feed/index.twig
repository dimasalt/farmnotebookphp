    <!-- toastr -->    
    <script src="/assets/components/toastr/toastr.min.js"></script>

    <!-- feeds vuejs -->
    <script src="/assets/js/vue/ration/feed/index.js"></script>

    <script type="application/javascript">
        $(function () {          

        });
    </script>
{% endblock %}